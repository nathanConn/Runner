<% if @gears.present? %>
  <% @gears.each do |gear| %>
<p>
  <strong><%= gear.name %></strong>
</p>
 <p>
    <strong>Rating:</strong>
    <%= gear.rating %>
  </p>
  <p>
    <strong>Wireless:</strong>
    <%= check_box_tag 'wireless', '1' %>
  </p>
  <p>
    <strong>Misc:</strong>
    <%= gear.misc %>
  </p>

<p>
<%= link_to 'x', [gear.character, gear],
			method: :delete,
			data: { confirm: 'Really?' } %>
</p>
  <% end %>
<% else %>
   <p colspan=4>You don't have any gear.</p>
<% end %>