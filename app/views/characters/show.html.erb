<div style="float:left; width:12%;">
  <p id="notice"><%= notice %></p>
  <h3>
    <strong>
    <%= @character.name %>
    </strong>
  </h3>

  <h5>Attributes:</h5>
  <p>
    <strong>Sex:</strong>
    <%= @character.sex %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @character.body %>
  </p>

  <p>
    <strong>Agility:</strong>
    <%= @character.agility %>
  </p>

  <p>
    <strong>Reaction:</strong>
    <%= @character.reaction %>
  </p>

  <p>
    <strong>Strength:</strong>
    <%= @character.strength %>
  </p>

  <p>
    <strong>Willpower:</strong>
    <%= @character.willpower %>
  </p>

  <p>
    <strong>Logic:</strong>
    <%= @character.logic %>
  </p>

  <p>
    <strong>Intuition:</strong>
    <%= @character.intuition %>
  </p>

  <p>
    <strong>Charisma:</strong>
    <%= @character.charisma %>
  </p>

  <p>
    <strong>Edge:</strong>
    <%= @character.edge %>
  </p>

  <p>
    <strong>Essence:</strong>
    <%= @character.essence %>
  </p>

  <%= link_to 'Edit', edit_character_path(@character) %> |
  <%= link_to 'Back', characters_path %>
</div>
<div style="float:left; width:20%;">
  <p id="notice"><%= notice %></p>
    <br></br>
  <h5>Skills:</h5>
    <%= render @character.skills %>
  <h5>Add New Skill:</h5>
    <%= render 'skills/form' %>
</div>
<div style="float:left; width:20%;">
  <p id="notice"><%= notice %></p>
    <br></br>
<h5>Weapons:</h5>
  <%= render @character.weapons %>
<h5>Add New Weapon:</h5>
  <%= render 'weapons/form' %>
</div>
<div style="float:left; width:20%;">
  <p id="notice"><%= notice %></p>
  <br></br>
<h5>Armor:
      <%= render @character.armors %>
  <h5>Add New Armor:</h5>
    <%= render 'armors/form' %>
</div>
<div style="float:left; width:20%;">
  <p id="notice"><%= notice %></p>
  <br></br>
<h5>Gear:
      <%= render @character.gears %>
  <h5>Add New Gear:</h5>
    <%= render 'gears/form' %>
</div>